<!-- <% layout("layouts/boilerplate") -%> -->
<style>
  body {
    background-color: #F8FAFC;
  }
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    padding: 1rem 2rem;
    background-color: white;
    border-bottom: 1px solid #E2E8F0;
    justify-content: center;
  }
  .filter {
    text-align: center;
    margin: 0.5rem 1rem;
    color: #64748B;
    transition: transform 0.2s, color 0.2s;
    cursor: pointer;
  }
  .filter:hover {
    color: #0F172A;
    transform: scale(1.1);
  }
  .filter p {
    font-size: 0.75rem;
    margin-top: 0.25rem;
  }
  .tax-toggle {
    border: 1px solid #E2E8F0;
    border-radius: 2rem;
    height: 2.5rem;
    padding: 0 1rem;
    margin-left: 1rem;
    display: flex;
    align-items: center;
    background-color: white;
    transition: background-color 0.2s, border 0.2s;
  }
  .tax-toggle:hover {
    background-color: #F1F5F9;
    border-color: #CBD5E1;
  }
  .listing-card {
    border: none;
    border-radius: 1rem;
    overflow: hidden;
    transition: transform 0.2s, box-shadow 0.2s;
    padding:0.5rem;
  }
  .listing-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.1);
  }
  .listing-card img {
    object-fit: cover;
    height: 16rem;
    padding:0rem;
  }
  .card-title {
    color: #0F172A;
    font-size: 1rem;
  }
  .card-text {
    font-size: 0.9rem;
    color: #64748B !important;
  }
</style>

  <div id="filters">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
     </div>

     <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
     </div>

     <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
     </div>

     <div class="filter">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
     </div>

     <div class="filter">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castles</p>
     </div>

     <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Pools</p>
     </div>

     <div class="filter">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camps</p>
     </div>

      <div class="filter">
      <div><i class="fa-solid fa-cow"></i></div>
      <p>Farms</p>
     </div>

      <div class="filter">
      <div><i class="fa-solid fa-snowflake"></i></div>
      <p>Artic</p>
     </div>

     <div class="filter">
      <div><i class="fa-solid fa-igloo"></i></div>
      <p>Domes</p>
     </div>

     <div class="filter">
      <div><i class="fa-solid fa-ship"></i></div>
      <p>Boats</p>
     </div>

     <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
          <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
        </div>
     </div>

   
  </div>
  <div class="container mt-4">
    <%=success%>

    <!-- <h3 class="mb-4">All Listings</h3> -->
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
      <% for (let listing of allListings) { %>
        <div class="col">
          <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card h-100 shadow-sm listing-card">
              <div class="card-img-overlay"></div>
              <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>" style="height: 20rem">
              <div class="card-body">
                <h5 class="card-title"><b><%= listing.title %></b></h5>
                <p class="card-text text-muted">&#8377; <%= listing.price.toLocaleString("en-IN") %>/night<i class="tax-info">&nbsp; &nbsp;+18% GST</i></p>
              </div>
            </div>
          </a>
        </div>
      <% } %>
    </div>
  </div>


  <script>
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (let info of taxInfo) {
      info.style.display = (info.style.display !== "inline") ? "inline" : "none";
    }
  });
  </script>